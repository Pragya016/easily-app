<div id="particles-js"></div>
<div class="homePage content">

    <h3 id="heading3">Welcome to easily</h3>
    <h1 id="heading1">A comprehensive platform for reliable job opportunities and internships.</h1>
    <h2 id="heading2">job opportunities and internships.</h2>
    <h4 class="mt-3" id="heading4">Get Discovered, Get Hired</h4>
    <div id="btnContainer">
    <a id="jobSeekerBtn" href="/jobs" class="btn btn-primary px-4">I'm a Job Seeker</a>
    <!-- if user is logged in, disable the button. -->
    <!-- check if user is already logged in as a recuiter  -->
    <% if(isLoggedIn){ %>
      <%  var addDisable = 'disabled'; %>
    <% }else { %>
      <%  var addDisable = ''; %>
    <% } %> 

    <!-- if user is logged in, disable the button. -->
    <button type="button" id="recruiterBtn" class="btn btn-primary px-4" <%= addDisable %> data-bs-toggle="modal" data-bs-target="#jobApplication" >
        I'm a Recruiter
    </button>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="jobApplication" tabindex="-1" aria-labelledby="recruiterRegistration"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="recruiterRegistration">Experience Easily</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/register" method="post">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" aria-describedby="emailHelp"
                                name="email">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Register</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <p>Already registered? </p>
                    <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal"
                        data-bs-target="#login">
                        Login
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Login Modal -->
    <div class="modal fade" id="login" tabindex="-1" aria-labelledby="loginModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="loginModal">Login to Easily</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/login" method="post">
                        <div class="mb-3">
                            <label for="loginEmail" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="loginEmail" aria-describedby="emailHelp"
                                name="email">
                        </div>
                        <div class="mb-3">
                            <label for="loginPassword" class="form-label">Password</label>
                            <input type="password" class="form-control" id="loginPassword" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Login</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal" aria-label="Close">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>